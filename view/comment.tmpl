<li id="task-comment-{$id}" class="tabBlock comment contextmenuComment {if $is_public}isPublic{/if}">
	<a name="task-comment-{$id}"></a>
	<div class="comment-properties">
	{if $unapproved}
		<a href="javascript:void(0)" id="comment-{$id}-seenstatus" onclick="Todoyu.Ext.comment.setSeenStatus({$id}, {userid()})" class="comment-userapproval hasicon"></a>
	{/if}
		<span id="task-comment-{$id}-crdate" class="comment-crdate hasicon">{date_format $date_create "%d.%m.%y %R"}</span>
		<span id="task-comment-{$id}-user" class="comment-user hasicon">
			<a href="javascript:void(0)" onclick="Todoyu.Ext.user.showUserPopup({$user_create.id})">{$user_create.lastname} {$user_create.firstname}</a>
		</span>
		<span id="task-comment-{$id}-id" class="comment-id" title="{Label comment.id}">K{$id}</span>
		<span id="task-comment-{$id}-options" class="comment-options">
		{restrict comment makePublic}
			<a href="javascript:void(0)" onclick="Todoyu.Ext.comment.togglePublic({$id})" class="icon public-trigger {if $is_public}comment-public{/if}" title="{Label comment.icon.toggleCustomerVisibility}" id="public-trigger-{$id}">
				<span class="hidden">{Label comment.icon.toggleCustomerVisibility}</span>
			</a>
		{/restrict}
		{if allowedOrOwn('comment','deleteAll', $id_user_create)}
			<a href="javascript:void(0)" onclick="Todoyu.Ext.comment.remove({$id})" class="icon comment-remove" title="{Label comment.icon.remove}">
				<span class="hidden">{Label comment.icon.remove}</span>
			</a>
		{/if}
		{if allowedOrOwn('comment','editAll', $id_user_create)}
			<a href="javascript:void(0)" onclick="Todoyu.Ext.comment.edit({$id_task}, {$id})" class="icon comment-edit" title="{Label comment.icon.edit}">
				<span class="hidden">{Label comment.icon.edit}</span>
			</a>
		{/if}
		</span>
	</div>
	<div id="task-comment-{$id}-text" class="comment-details">
		<div class="left comment">{$comment}</div>
		<div class="right users">
		{foreach $users_feedback feedbackUser name=usersFeedback}
			<dl>
			{if $dwoo.foreach.usersFeedback.first}
				<dt>{Label LLL:comment.comment.feedbackusers}</dt>
			{else}
				<dt>&nbsp;</dt>
			{/if}
				<dd>
					<span id="task-comment-{$id}-feedbackuser-{$feedbackUser.id}" {if !$feedbackUser.is_seen}class="commentuser-unapproved"{/if}>{$feedbackUser.lastname}, {$feedbackUser.firstname}</span>
				</dd>
				</dl>
			{else}
		{/foreach}
		</div>
	</div>
	<div class="clear"><!-- clear --></div>
</li>