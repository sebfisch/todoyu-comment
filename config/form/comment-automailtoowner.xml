<?xml version="1.0" encoding="UTF-8"?>
<!-- Extends the comment form with auto-feedback from task owner option -->
<form>
	<attributes>
		<attribute name="action">?ext=comment&amp;controller=comment</attribute>
		<attribute name="name">comment</attribute>
		<attribute name="onsubmit">return false</attribute>
		<attribute name="class">formComment</attribute>
	</attributes>

	<fieldsets>

		<fieldset name="automailtoowner">
			<legend>Left form column</legend>
			<class>main</class>
			<elements>

				<field type="checkbox" name="sendasemail">
					<label>comment.edit.sendasemail</label>
					<onchange>Todoyu.Ext.comment.Edit.onChangeEmail(#id_task#, #id#)</onchange>
					<checked>1</checked>
					<disabled>1</disabled>
					<style>display:none</style>
				</field>

				<field type="select" name="emailreceivers">
					<label>comment.edit.autoSentEmailToTaskOwner</label>
					<source type="function">
						<function>TodoyuCommentViewHelper::getTaskOwnerEmailOption</function>
						<lazyInit/>
					</source>
					<size>1</size>
					<multiple>0</multiple>
					<disabled>1</disabled>
					<style>display:none</style>
				</field>

			</elements>
		</fieldset>

	</fieldsets>
</form>